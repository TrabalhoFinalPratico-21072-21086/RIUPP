@model RIUPP.Models.Ficheiro

@{
    ViewData["Title"] = "Delete";
}
    <div class="container">
        <br /><br /><br /><br /><br />
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Ficheiro</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Titulo
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class="col-sm-2">
                    Descrição
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-sm-2">
                    Observação
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Observacao)
                </dd>
                <dt class="col-sm-2">
                    Data de upload
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateUpload)
                </dd>
                <dt class="col-sm-2">
                    Area
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Area.Nome)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Apagar Ficheiro" class="btn btn-danger" /> |
                <a asp-action="Index">Voltar</a>
            </form>
        </div>
    </div>